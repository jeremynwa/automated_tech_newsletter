[Unit]
Description=Tech Digest Web Application
After=network.target

[Service]
Type=simple
User=your_username
WorkingDirectory=/path/to/automated_tech_newsletter
Environment="PATH=/path/to/automated_tech_newsletter/venv/bin"
ExecStart=/path/to/automated_tech_newsletter/venv/bin/gunicorn -w 4 -b 0.0.0.0:8080 webapp.app:app
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/path/to/automated_tech_newsletter/logs/access.log
StandardError=append:/path/to/automated_tech_newsletter/logs/error.log

[Install]
WantedBy=multi-user.target